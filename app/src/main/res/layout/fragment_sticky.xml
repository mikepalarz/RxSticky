<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/subscribe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_sticky_top_margin"
        android:text="@string/fragment_sticky_subscribe_button_before_subscribe_text"
        app:layout_constraintEnd_toStartOf="@id/clear_broadcasts_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/clear_broadcasts_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_sticky_top_margin"
        android:text="@string/fragment_sticky_clear_broadcasts_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/subscribe_button"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sticky_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/fragment_sticky_textview_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_sticky_top_margin"
        android:layout_marginRight="@dimen/fragment_sticky_textview_horizontal_margin"
        android:layout_marginBottom="@dimen/fragment_sticky_textview_bottom_margin"
        android:hint="@string/fragment_sticky_textview_hint"
        android:textAlignment="center"
        android:textSize="@dimen/fragment_sticky_textview_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subscribe_button"/>

</android.support.constraint.ConstraintLayout>